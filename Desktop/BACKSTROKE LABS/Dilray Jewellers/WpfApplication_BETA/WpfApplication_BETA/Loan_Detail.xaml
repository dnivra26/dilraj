                <Button Background="Orange" BorderBrush="Crimson" Content="Load" FontSize="12" FontWeight="Bold" Height="23" HorizontalAlignment="Left" Margin="475,134,0,0" Name="button6" VerticalAlignment="Top" Width="37" Click="button6_Click" />
